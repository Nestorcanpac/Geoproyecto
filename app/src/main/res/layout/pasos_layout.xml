<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rojo"
        android:padding="16dp">


        <TextView
            android:id="@+id/Paso1"
            android:layout_width="125dp"
            android:layout_height="41dp"
            android:layout_marginTop="28dp"
            android:text="Paso 1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/paso2"
            android:layout_width="143dp"
            android:layout_height="47dp"
            android:text="Paso 2"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Paso1"
            app:layout_constraintVertical_bias="0.314" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="128dp"
            android:layout_height="51dp"
            android:text="Paso 3"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paso2"
            app:layout_constraintVertical_bias="0.571" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="235dp"
            android:layout_height="26dp"
            android:layout_marginTop="12dp"
            android:text="Introduce datos y importe de propina"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/paso2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Paso1"
            app:layout_constraintVertical_bias="0.014" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="247dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:text="Lista las propinas recolectadas"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paso2"
            app:layout_constraintVertical_bias="0.032" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="223dp"
            android:layout_height="27dp"
            android:layout_marginTop="16dp"
            android:text="Mapea la propina"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.017" />

        <Button
            android:id="@+id/BotonIniciopasos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:text="Vamos al Paso 1"
            android:textColor="#FF0000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintVertical_bias="0.333" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>