<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rojo"
        android:padding="16dp">


        <TextView
            android:id="@+id/Paso1"
            android:layout_width="119dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:text="Paso 1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/paso2"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:layout_marginTop="-5dp"
            android:text="Paso 2"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Paso1"
            app:layout_constraintVertical_bias="0.356" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="126dp"
            android:layout_height="33dp"
            android:text="Paso 3"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paso2"
            app:layout_constraintVertical_bias="0.597" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="235dp"
            android:layout_height="26dp"
            android:layout_marginTop="12dp"
            android:text="Introduce datos y importe de propina"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/paso2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Paso1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="247dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:text="Lista las propinas recolectadas"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paso2"
            app:layout_constraintVertical_bias="0.024" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="223dp"
            android:layout_height="27dp"
            android:layout_marginTop="16dp"
            android:text="Mapea la propina"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.016" />

        <Button
            android:id="@+id/BotonPaso3"
            android:layout_width="101dp"
            android:layout_height="38dp"
            android:background="#FF0000"
            android:text="Saltar"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintVertical_bias="0.3" />

        <ImageView
            android:id="@+id/Flecha1"
            android:layout_width="93dp"
            android:layout_height="93dp"

            android:rotation="90"
            app:layout_constraintBottom_toTopOf="@+id/paso2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.658" />

        <ImageView
            android:id="@+id/Flecha2"
            android:layout_width="100dp"
            android:layout_height="104dp"
            android:rotation="90"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.824" />

        <ImageView
            android:id="@+id/Logo1"
            android:layout_width="56dp"
            android:layout_height="51dp"
            android:layout_marginTop="4dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/Logo2"
            android:layout_width="54dp"
            android:layout_height="52dp"
            android:layout_marginTop="4dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.991"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/botonPaso1"
            android:layout_width="130dp"
            android:layout_height="41dp"
            android:text="Empezar"
            app:layout_constraintBottom_toTopOf="@+id/Flecha1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Button
            android:id="@+id/BotonPaso2"
            android:layout_width="111dp"
            android:layout_height="44dp"
            android:text="Saltar"
            app:layout_constraintBottom_toTopOf="@+id/Flecha2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>